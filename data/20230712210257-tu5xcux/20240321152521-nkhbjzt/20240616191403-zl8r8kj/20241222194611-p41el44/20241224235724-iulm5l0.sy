					"Data": "Shader \"TeachShader/Lesson93_ScrollingBackground\"\n{\n    Properties\n    {\n        _MainTex (\"Texture\", 2D) = \"white\" {}\n        _ScrollSpeedU(\"ScrollSpeedU\", float) = 0.5\n        _ScrollSpeedV(\"ScrollSpeedV\", float) = 0.5\n    }\n\n    SubShader\n    {\n        Tags { \"RenderType\"=\"Transparent\" \"Queue\"=\"Transparent\" \"IgnoreProjector\"=\"True\" }\n\n        Pass\n        {\n            ZWrite Off\n            Blend SrcAlpha OneMinusSrcAlpha\n\n            CGPROGRAM\n            #pragma vertex vert\n            #pragma fragment frag\n\n            #include \"UnityCG.cginc\"\n\n            struct v2f\n            {\n                float2 uv : TEXCOORD0;\n                float4 vertex : SV_POSITION;\n            };\n\n            sampler2D _MainTex;\n            float4 _MainTex_ST;\n            float _ScrollSpeedU;\n            float _ScrollSpeedV;\n\n            v2f vert (appdata_base v)\n            {\n                v2f o;\n                o.vertex = UnityObjectToClipPos(v.vertex);\n                o.uv = v.texcoord;\n                return o;\n            }\n\n            fixed4 frag (v2f i) : SV_Target\n            {\n                // 利用时间来计算UV的偏移，因为时间一直在变化，因此最终的UV坐标也不停在变，使用frac是确保uv坐标处于0~1范围内\n                float2 scrollUV = frac(i.uv + float2(_Time.y * _ScrollSpeedU, _Time.y * _ScrollSpeedV));\n                return tex2D(_MainTex, scrollUV);\n            }\n            ENDCG\n        }\n    }\n}\n"
