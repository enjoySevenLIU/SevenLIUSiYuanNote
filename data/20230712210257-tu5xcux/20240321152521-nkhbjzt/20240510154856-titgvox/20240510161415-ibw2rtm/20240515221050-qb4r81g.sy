							]
						},
						{
							"ID": "20240515222453-uw46nt0",
							"Type": "NodeParagraph",
							"Properties": {
								"id": "20240515222453-uw46nt0",
								"updated": "20240515222507"
							},
							"Children": [
								{
									"Type": "NodeTextMark",
									"TextMarkType": "strong",
									"TextMarkTextContent": "保持直线的平行性和原点位置不变，比如缩放、旋转等操作"
								},
								{
									"Type": "NodeText",
									"Data": "\n简而意之就是"
								},
								{
									"Type": "NodeTextMark",
									"TextMarkType": "strong",
									"TextMarkTextContent": "只对向量进行旋转、缩放等操作，而不影响方向和原点的位置"
								},
								{
									"Type": "NodeText",
									"Data": "\n"
								}
							]
						}
					]
				},
				{
					"ID": "20240515221458-hvhuex9",
					"Type": "NodeListItem",
					"ListData": {
						"BulletChar": 42,
						"Marker": "Kg=="
